<% content_for :title do %>LSRSv5: <%= @factor[:section].capitalize%> factor <%= @factor[:name]%> for <%=@crop[:name]%><%end%>

<h1><%= @factor[:section].capitalize%> Factor for <%=@crop[:name].capitalize%>: <%= @factor[:acronym_en]%></h1>


<h3>(<%= @factor[:title_en]%>)</h3>
<%= raw @factor[:definition_en]%>
<%if @factor[:purpose_en] != nil then%><%= raw @factor[:purpose_en]%><%end%>
<%if @factor[:description_en] != nil then%><%= raw @factor[:description_en]%><%end%>
<%= render :partial => "/crop_#{@crop[:name]}/#{@factor[:name].downcase}.html.erb" %>
<%= render :partial => "table.html.erb" %>
<%= render :partial => "chart.erb" %>

<h3>More info</h3>
<ul>
	<li><a href="/climateindices/documentation/<%= @factor[:name]%>.html">Determining <%= @factor[:title_en]%> (<%= @factor[:acronym_en]%>)</a></li>
	<li><a href="/documentation/reports/<%=@crop[:model_doc]%>">Model Development</a></li>
</ul>